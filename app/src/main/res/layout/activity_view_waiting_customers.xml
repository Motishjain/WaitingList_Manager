<android.support.v4.widget.SwipeRefreshLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swip_bar"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.waitinglist.ViewWaitingCustomersActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:local="http://schemas.android.com/apk/res-auto"
        android:id="@+id/view_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/PrimaryColor"
        local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_32"
            android:id="@+id/view_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting Customers List"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/view_back"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            style="?attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:background="@drawable/add_24"
            android:id="@+id/fab_add"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_toolbar"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="top"
        android:layout_marginBottom="1dp"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardBackgroundColor="#776a69"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Name"
            android:layout_marginLeft="2dp"
            android:textSize="16sp"
            android:layout_weight="15"
            android:textColor="#fff"
            android:fontFamily="sans-serif"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="People"
            android:layout_weight="15"
            android:width="0dp"
            android:textSize="16sp"
            android:textColor="#fff"
            android:fontFamily="sans-serif"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Estimated Time"
            android:layout_weight="20"
            android:textSize="16sp"
            android:textColor="#fff"
            android:fontFamily="sans-serif"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Actual Waiting Time"
            android:layout_weight="20"
            android:textSize="16sp"
            android:textColor="#fff"
            android:fontFamily="sans-serif"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:layout_weight="15"
            android:textSize="16sp"
            android:textColor="#fff"
            android:fontFamily="sans-serif"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Actions"
            android:gravity="center"
            android:layout_weight="15"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_marginRight="2dp"
            android:fontFamily="sans-serif"
            />
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_cont"
        android:layout_marginTop="2dp"
        android:layout_below="@id/title_bar"
        >
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>